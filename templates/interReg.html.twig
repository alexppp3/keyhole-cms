{% use '/interNav.html.twig' %}
{% use '/service.html.twig' %}

{% block meta %}
{{ parent() }}
{% endblock %}
{% block navbar %}
{{ parent() }}
{% endblock %}

<div align="center" style="padding: 10%;">
{% if error==true %}
{% if error==1 %}
<div class="alert alert-danger" role="alert">
  Неправильное заполнение!
</div>
{% endif %}
{% if error==2 %}
<div class="alert alert-danger" role="alert">
  Такой e-mail адрес уже зарегистрирован.
</div>
{% endif %}
{% endif %}
<form method="post" action="/register/logic">
<input name="email" maxlength="32" class="form-control" placeholder="E-mail" required>
<input name="password" type="password" maxlength="32" class="form-control" placeholder="Пароль" required>
<input name="name" maxlength="64" class="form-control" placeholder="Имя" required>
<textarea class="form-control" name="adress" placeholder="Адрес для доставки" maxlength="500"></textarea>
<textarea class="form-control" name="contact" placeholder="Как с вами можно связаться?" maxlength="500" required></textarea>
<p><input type="submit" class="btn btn-lg btn-success" value="Зарегистрироваться"></p>
</form>
</div>